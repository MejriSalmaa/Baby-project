

{% block body %}
    <h1>List books</h1>
    {{ form_start(f)}}
    <b>{{ form_label(f.ref)}}:</b>
    {{ form_widget(f.ref)}}
    {{ form_widget(f.Search)}}
    {{ form_end(f)}}
    <table class="table" border="2px">
        <thead>
            <tr>
                <th>Title</th>
                <th>PublicationDate</th>
                <th>Published</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for b in books %}
            <tr>
                <td>{{ b.title }}</td>
                <td>{{ b.publicationDate ? b.publicationDate|date('F d, Y') : '' }}</td>
                <td>{{ b.published ? 'Yes' : 'No' }}</td>
                <td>{{ b.category }}</td>
                <td>
                    <a href="{{ path('app_detailBook', {'ref':b.ref }) }}">show</a>
                    <a href="{{ path('app_editBook', {'ref': b.ref}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_AddBook') }}">Create new</a>
{% endblock %}